<Window x:Class="Switcheroo.OptionsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="Switcheroo Options" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        ShowInTaskbar="False" WindowStyle="ToolWindow" Background="{x:Static SystemColors.WindowBrush}" Height="208" Width="174">
    <Window.Resources>    
    </Window.Resources>
    <StackPanel Margin="5" >
        <CheckBox Name="WindowsKey" Margin="5">Windows key</CheckBox>
        <CheckBox Name="Alt" Margin="5">Alt key</CheckBox>
        <CheckBox Name="Ctrl" Margin="5">Ctrl key</CheckBox>
        <CheckBox Name="Shift" Margin="5">Shift key</CheckBox>                
        <ComboBox Name="Keys" ItemsSource="{Binding}"  Width="120" Margin="5" />
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="126*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <Button Name="Ok" HorizontalAlignment="Right" Width="60" Grid.ColumnSpan="2" Click="Ok_Click" IsDefault="True">OK</Button>
            <Button Name="Cancel" HorizontalAlignment="Left" Width="60" Click="Cancel_Click" IsCancel="True">Cancel</Button>
        </Grid>        
    </StackPanel>
</Window>
